#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to TicTacToe",''

def start
    puts "How many player? ( 0 = computer vs. computer, 1 = human vs. computer, 2 human vs. human)"
    input = gets.strip
    puts
    if input == '0'
        # binding.pry
        Game.new(Player::Computer.new('X'), Player::Computer.new('O')).play
        # binding.pry
        loop_around
    elsif input == '1'
        Game.new(Player::Human.new('X'), Player::Computer.new('O')).play
        loop_around
    elsif
        Game.new(Player::Human.new('X'), Player::Human.new('O')).play
        loop_around
    end

    
    end
    def loop_around
        puts "Play again? ( y / n )",""
        input = gets.strip.downcase
        case input
        when 'y'
            start
        when 'n'
            puts "See you next time at a game of TicTacToe!"
        else
            loop_around
    
    end
end
start